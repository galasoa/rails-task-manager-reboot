<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed ? "✅" : "❌" %>
     <strong><%= task.title %></strong> -
     <%= "#{task.details} - done: #{task.completed}" %>
     <%= link_to "View", task_path(task) %>
     <%= link_to "Edit", edit_task_path(task) %>
     <%= link_to "🗑", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
   </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path  %>
